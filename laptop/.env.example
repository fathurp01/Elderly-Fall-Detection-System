# Flask Configuration
SECRET_KEY=your_secret_key_here
FLASK_ENV=development
FLASK_DEBUG=True
ALLOWED_ORIGINS=*

# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT_PATH=path/to/your/firebase-service-account.json
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Firebase Web Config (Client-side)
FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Redis Configuration (for caching and rate limiting)
# Leave empty to use in-memory cache/rate limiting
REDIS_URL=redis://localhost:6379/0
# For Redis Cloud or remote Redis:
# REDIS_URL=redis://username:password@hostname:port/database

# LSTM Model Configuration
MODEL_PATH=models/lstm_fall_detection.h5
SCALER_PATH=scaler2.pkl
CONFIDENCE_THRESHOLD=0.7
SEQUENCE_LENGTH=41

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/fall_detection.log

# Performance Optimization Settings
# Cache timeout in seconds
CACHE_DEFAULT_TIMEOUT=300
# Maximum number of logs to fetch in optimized queries
MAX_LOGS_LIMIT=500
# Default time window for recent queries (in days)
DEFAULT_TIME_WINDOW_DAYS=30

# Rate Limiting Configuration
# Global rate limits
GLOBAL_RATE_LIMIT_PER_DAY=1000
GLOBAL_RATE_LIMIT_PER_HOUR=100

# API-specific rate limits
API_FIREBASE_TEST_LIMIT=10 per minute
API_FIREBASE_LOGS_LIMIT=30 per minute
API_TIMELINE_STATS_LIMIT=20 per minute
API_OPTIMIZATION_STATUS_LIMIT=60 per minute
API_CACHE_CLEAR_LIMIT=5 per minute

# Optional: Notification Services
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# TELEGRAM_CHAT_ID=your_telegram_chat_id
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number
# ALERT_PHONE_NUMBER=phone_number_to_send_alerts

# Development Settings
DEBUG_MODE=True
TESTING=False

# Production Settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=False
# DEBUG_MODE=False
# LOG_LEVEL=WARNING