# =============================================================================
# PRODUCTION CONFIGURATION - Fall Detection System
# =============================================================================

# Flask Server Configuration
SECRET_KEY=your-secure-secret-key-here-change-in-production
FLASK_ENV=production
FLASK_DEBUG=False
HOST=0.0.0.0
PORT=5000

# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT_PATH=firebase-service-account.json
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com/
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_CACHE_SIZE=100
FIREBASE_TIMEOUT=30
FIREBASE_RETRY_ATTEMPTS=3
BATCH_WRITE_SIZE=500

# LSTM Model Configuration
MODEL_PATH=best3.keras
SCALER_PATH=scaler2.pkl
CONFIDENCE_THRESHOLD=0.7
SEQUENCE_LENGTH=30
DETECTION_COOLDOWN=5
MODEL_BATCH_SIZE=1

# Performance & Resource Management
MAX_WORKERS=4
MEMORY_LIMIT=2048
CPU_THRESHOLD=80
DISK_THRESHOLD=85

# Caching Configuration (Optional - Redis)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_RETENTION_DAYS=30

# Data Retention
EVENT_RETENTION_DAYS=90
AUTO_CLEANUP=True

# Email Notification Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_RECIPIENTS=admin@example.com,family@example.com

# SMS Notification Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890
ALERT_PHONE_NUMBERS=+1987654321,+1122334455

# Webhook Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Security Settings
ENABLE_CORS=False
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
SESSION_TIMEOUT=3600

# Development/Debug (Set to False in production)
DEBUG_MODE=False
VERBOSE_LOGGING=False