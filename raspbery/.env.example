# =============================================================================
# RASPBERRY PI CLIENT CONFIGURATION - Fall Detection System
# =============================================================================

# Server Configuration
SERVER_URL=http://192.168.1.100:5000
SERVER_HOST=192.168.1.100
SERVER_PORT=5000
SOCKET_NAMESPACE=/

# Camera Configuration
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30
CAMERA_BRIGHTNESS=50
CAMERA_CONTRAST=50
CAMERA_SATURATION=50
AUTO_EXPOSURE=True

# YOLO Model Configuration
YOLO_MODEL_PATH=best.pt
YOLO_CONFIDENCE=0.5
YOLO_IOU_THRESHOLD=0.45
YOLO_DEVICE=cpu
INPUT_SIZE=640

# Detection Configuration
MAX_DETECTIONS=10
DETECTION_CLASSES=0
MIN_DETECTION_SIZE=50
MAX_DETECTION_SIZE=1000

# Performance Configuration
PROCESSING_FPS=10
BUFFER_SIZE=1
SKIP_FRAMES=2
BATCH_PROCESSING=False
OPTIMIZE_INFERENCE=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/pi_client.log
LOG_MAX_SIZE=5242880
LOG_BACKUP_COUNT=3
LOG_RETENTION_DAYS=7

# Network Configuration
CONNECTION_TIMEOUT=10
RECONNECT_ATTEMPTS=5
RECONNECT_DELAY=5
HEARTBEAT_INTERVAL=30
MAX_RETRY_BACKOFF=60

# System Monitoring
ENABLE_SYSTEM_MONITORING=True
CPU_TEMP_THRESHOLD=70
MEMORY_THRESHOLD=80
DISK_THRESHOLD=85
MONITORING_INTERVAL=60

# PiCamera Configuration (Alternative to USB camera)
USE_PICAMERA=False
PICAMERA_RESOLUTION_WIDTH=640
PICAMERA_RESOLUTION_HEIGHT=480
PICAMERA_FRAMERATE=30
PICAMERA_ROTATION=0
PICAMERA_BRIGHTNESS=50
PICAMERA_CONTRAST=0
PICAMERA_SHARPNESS=0
PICAMERA_ISO=0

# Error Handling
MAX_CONSECUTIVE_ERRORS=10
ERROR_RECOVERY_DELAY=30
AUTO_RESTART_ON_FAILURE=True

# Development/Debug Settings
DEBUG_MODE=False
VERBOSE_LOGGING=False
SAVE_DEBUG_FRAMES=False
DEBUG_FRAME_PATH=debug_frames/

# Production Optimizations
ENABLE_GPU_ACCELERATION=False
USE_THREADING=True
OPTIMIZE_MEMORY=True
CLEANUP_INTERVAL=300